<head>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<div class="General-container">
  <div class="hero-unit">
    <h2>Delete question</h2>
    <%= link_to("Back to List", questions_path, :class => 'btn btn-primary btn-large') %>
    <br/><br/>
    <%= form_for(:question, :url => question_path(@question.id),:html=> {:method => :delete} ) do |f| -%>

      <p>Are you sure you want to permanently delete this question?</p>

      <p class="reference-name"><%= @question.question %></p>

      <div class="form-buttons">
        <%= submit_tag("Delete question", :class => 'btn btn-primary btn-large' ) %>
      </div>

    <% end %>
  </div>
</div>
