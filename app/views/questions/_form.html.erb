  function test(){
    var tempp = $('input[name="question[solution]"]:checked').attr('id');
    if(tempp == "solD"){
      var temp2 = document.getElementById("question_answerD").value;
      $('input[name="question[solution]"]:checked').attr('value', temp2);
    }
    else if(tempp == "solC"){
      var temp2 = document.getElementById("question_answerC").value;
      $('input[name="question[solution]"]:checked').attr('value', temp2);
    }
    else if(tempp == "solB"){
      var temp2 = document.getElementById("question_answerB").value;
      $('input[name="question[solution]"]:checked').attr('value', temp2);
    }
    else if(tempp == "solA"){
      var temp2 = document.getElementById("question_answerA").value;
      $('input[name="question[solution]"]:checked').attr('value', temp2);
    }
