<head>
    <%= javascript_include_tag "application" %>

</head>
<table summary="question form fields">
      <tr>
        <th>Question Subject</th>
        <td><%= f.text_field(:subject) %></td>
      </tr>
      <tr>
        <th>Question</th>
        <td><%= f.text_area(:question, :size=> "40x10") %></td>
      </tr>
      <tr>
        <th>Choice A</th>
        <td><%= f.text_field(:answerA) %>  </td>
        <td><%= f.radio_button(:solution, "test(A);")%></td>
      </tr>
      <tr>
        <th>Choice B</th>
        <td><%= f.text_field(:answerB) %></td>
        <td><%= f.radio_button(:solution, "test(B);")%></td>
      </tr>
      <tr>
        <th>Choice C</th>
        <td><%= f.text_field(:answerC) %></td>
        <td><%= f.radio_button(:solution, "test(C);")%></td>
      </tr>
      <tr>
        <th>Choice D</th>
        <td><%= f.text_field(:answerD) %></td>
        <td><%= f.radio_button(:solution, "test();")%></td>
      </tr>
      <tr>
        <th>Correct Answer</th>
        <td><%= f.text_field(:solution) %></td>
      </tr>
      <tr>
        <th><%=f.label(:rotation)%></th>
        <td><%=f.select(:rotation, 1..10,{:include_blank => 'all rotations'})%></td> 
      </tr>
      <tr>
        <th><%=f.label(:year)%></th>
        <td><%=f.select(:year, 1..10,{:include_blank => 'all years'})%></td> 
      </tr>
      <tr>
        <th>Time to Push</th>
        <td><%= f.datetime_select(:schedule , :order => [ :month , :day , :year]) %></td>
      </tr>
      
    </table>

<input id="clickMe" type="button" onclick="test();" />

<script type="text/javascript">
  function test(){
     var tempp = $('input[name="solution"]:checked').val();
     alert(tempp);
     var tmp = new String(tempp);
     var selection = $(tmp).val();
     alert(selection);
     return true;
</script>