<head>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %> 
</head>

<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<%end%>

<div class ="General-container"> 
  <div class ="hero-unit">
    <h2> Admins</h2>
    <%=link_to( "Back to Main menu" , {:controller => "access" , :action => :menu}, :class => "btn btn-primary btn-large")%>
    <a href="/admins/new" class="btn btn-primary btn-large">Add New Admin</a>
    <br>
    <br>
    <table class="listing" summary="Admin list">
      <tr class= "header">
        <th>&nbsp;</th>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>username</th>
        <th>Actions</th>
      </tr>
      <% @Admins.each do |admin| %>
      <tr>
        <td>&nbsp;</td>
        <td><%=admin.id %></td>
        <td><%=admin.firstName %></td>
        <td><%=admin.lastName %></td>
        <td><%=admin.username %></td>
        <td class= "actions">
          <%=  link_to("Show", {:action => 'show' , :id => admin.id}, :class => 'action show') %>
          <%=  link_to("Edit", {:action => "edit" , :id => admin.id}, :class=>'action edit') %>
          <%=  link_to("Delete", {:action => 'delete' , :id => admin.id}, :class=>'action delete') %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<%end%>
     