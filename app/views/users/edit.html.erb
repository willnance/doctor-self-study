
<%= link_to("<< Back to List", users_path, :class => 'back-link') %>

<div class="User edit">
  <h2>Update User</h2>

  <%= form_for(:User, :url => user_path(@User.id) , :html => {:method=> :put}) do |f| %>
    <%=  render(:partial => "form" , :locals => {:f => f})  %>
    
    <div class="form-buttons">
      <%= submit_tag("Update User") %>
    </div>
  <% end %>
</div>
