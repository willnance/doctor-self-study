

<div class ="User list"> 
  
  <h2> Users</h2>
  <%=link_to( "<< Back to Main menu" , :controller => "access" , :action => :menu)%>
  <br/>
  <%= link_to("Add new User", {:action => "new"}, :class=> 'action news') %>
  <table class="listing" summary="user list">
    <tr class= "header">
      <th>&nbsp;</th>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Username</th>
      <th>Actions</th>
    </tr>
    <% @Users.each do |user| %>
    <tr>
      <td><%=user.id %></td>
      <td><%=user.firstName %></td>
      <td><%=user.lastName %></td>
      <td><%=user.username %></td>
      <td class= "actions">
        <%=  link_to("Show", {:action => 'show' , :id => user.id}, :class => 'action show') %>
        <%=  link_to("Edit", {:action => "edit" , :id => user.id}, :class=>'action edit') %>
        <%=  link_to("Delete", {:action => 'delete' , :id => user.id}, :class=>'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
     