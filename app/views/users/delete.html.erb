
<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="question delete">
  <h2>Delete question</h2>
  
  <%= form_for(:question, :url => {:action => 'destroy', :id => @question.id}) do |f| -%>

    <p>Are you sure you want to permanently delete this question?</p>
  
    <p class="reference-name"><%= @question.question %></p>
  
    <div class="form-buttons">
      <%= submit_tag("Delete question") %>
    </div>
    
  <% end %>
</div>
