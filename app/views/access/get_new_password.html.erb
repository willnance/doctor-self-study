

<%= form_tag({:controller => "access" , :action=> "change_password"} , :class => 'form-signin') do %>
  <h2 class="form-signin-heading">Please enter your new password</h2>
  <%= label_tag(:username) %>
  <%= text_field_tag(:username , nil, :class => "input-block-level")%> <br/>
  <%= label_tag(:password)%>
  <%= password_field_tag(:password, nil, :class => "input-block-level")%> <br>
  <button class ="btn btn-large btn-primary" type ="submit" value ="Reset">Reset Password</button>
<%end%>